@using Web_QLNT.Models
@model List<SanPham>
@{
    ViewData["Title"] = "Trang Chủ";
    var dsncc = ViewBag.NCC as List<NhaCungCap> ?? new List<NhaCungCap>();
    int max = (int)Math.Ceiling((double)ViewBag.Count / 8);
    int min = 1;
    int page = ViewBag.Page;
}

<style>
    .availability-badge {
        position: absolute;
        top: 10px;
        right: 10px;
        color: white;
        padding: 5px 10px;
        font-size: 12px;
        border-radius: 3px;
    }

    .product-card {
        height: 100%;
        transition: transform 0.3s ease;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

    .card-img-top {
        height: 200px;
        object-fit: cover;
    }
</style>

<div class="container mt-4">
    <!-- Carousel -->
    <div id="productCarousel" class="carousel slide mb-4" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/banner1.jpg" class="d-block w-100" alt="Banner 1" style="height: 400px; object-fit: cover;">
            </div>
            <div class="carousel-item">
                <img src="~/images/banner2.jpg" class="d-block w-100" alt="Banner 2" style="height: 400px; object-fit: cover;">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#productCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#productCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <!-- Product Grid -->
    <div class="row">
        @foreach (var product in Model)
        {
            var tt = product.TinhTrang == true ? "Còn Hàng" : "Hết Hàng";
            var ten = product.TenSP?.Length > 25 ? product.TenSP.Substring(0, 22) + "..." : product.TenSP;
            var nhaCungCap = dsncc.FirstOrDefault(t => t.MaNCC == product.MaNCC);

            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card product-card">
                    <div class="position-relative">
                        <a href="@Url.Action("Details", "Home", new { id = product.MaSP })">
                            <img src="~/images/products/@product.HinhAnh" class="card-img-top" alt="@product.TenSP"
                                 onerror="this.src='/images/products/default.jpg'">
                        </a>
                        <span class="availability-badge bg-@(tt == "Còn Hàng" ? "success" : "secondary")">@tt</span>
                    </div>

                    <div class="card-body d-flex flex-column">
                        <div class="mb-2">
                            <small class="text-muted">@nhaCungCap?.TenNCC</small>
                        </div>

                        <h6 class="card-title">
                            <a href="@Url.Action("Details", "Home", new { id = product.MaSP })"
                               class="text-decoration-none text-dark">@ten</a>
                        </h6>

                        <p class="card-text text-danger fw-bold">@product.DonGia.ToString("N0") ₫</p>

                        <div class="mt-auto">
                            @if (tt == "Còn Hàng")
                            {
                                <form method="post" action="@Url.Action("AddToCart", "Home")" class="d-inline">
                                    <input type="hidden" name="id" value="@product.MaSP" />
                                    <input type="hidden" name="quantity" value="1" />
                                    <button type="submit" class="btn btn-primary btn-sm w-100">
                                        <i class="fas fa-cart-plus"></i> Thêm vào giỏ
                                    </button>
                                </form>
                            }
                            else
                            {
                                <button class="btn btn-secondary btn-sm w-100" disabled>
                                    <i class="fas fa-times"></i> Hết hàng
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Pagination -->
    @if (max > 1)
    {
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <li class="page-item @(page <= min ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { id = page - 1 })" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>

                @for (int i = 1; i <= max; i++)
                {
                    <li class="page-item @(i == page ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { id = i })">@i</a>
                    </li>
                }

                <li class="page-item @(page >= max ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { id = page + 1 })" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    }
</div>

@section Scripts {
    <script>
        // Hiển thị thông báo từ TempData
        $(document).ready(function() {
            var successMessage = '@TempData["SuccessMessage"]';
            var errorMessage = '@TempData["ErrorMessage"]';

            if (successMessage) {
                toastr.success(successMessage);
            }
            if (errorMessage) {
                toastr.error(errorMessage);
            }
        });
    </script>
}