@using Web_QLNT.Models
@model GioHang
@{
    ViewData["Title"] = "Giỏ Hàng";
}

<style>
    .cart-table th {
        background-color: #f8f9fa;
    }

    .quantity-input {
        width: 70px;
        text-align: center;
    }
</style>

<div class="container mt-4">
    <h2 class="mb-4"><i class="fas fa-shopping-cart"></i> GIỎ HÀNG</h2>

    @if (Model.Items.Count > 0)
    {
        <div class="table-responsive">
            <table class="table table-bordered cart-table">
                <thead class="table-light">
                    <tr>
                        <th>Hình ảnh</th>
                        <th>Sản phẩm</th>
                        <th>Đơn giá</th>
                        <th>Số lượng</th>
                        <th>Thành tiền</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>
                                <img src="~/images/products/@item.SanPham.HinhAnh"
                                     alt="@item.SanPham.TenSP" style="width: 60px; height: 60px; object-fit: cover;"
                                     onerror="this.src='/images/products/default.jpg'">
                            </td>
                            <td>
                                <strong>@item.SanPham.TenSP</strong><br>
                                <small class="text-muted">Mã: @item.SanPham.MaSP</small>
                            </td>
                            <td>@item.SanPham.DonGia.ToString("N0") ₫</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <form method="post" action="@Url.Action("UpdateCartItem", "Home")" class="d-flex">
                                        <input type="hidden" name="productId" value="@item.SanPham.MaSP" />
                                        <input type="number" name="quantity" value="@item.Quantity"
                                               min="1" max="@item.SanPham.SoLuongTon"
                                               class="form-control quantity-input me-2"
                                               onchange="this.form.submit()" />
                                    </form>
                                </div>
                            </td>
                            <td class="fw-bold">@((item.SanPham.DonGia * item.Quantity).ToString("N0")) ₫</td>
                            <td>
                                <form method="post" action="@Url.Action("RemoveFromCart", "Home")">
                                    <input type="hidden" name="productId" value="@item.SanPham.MaSP" />
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash"></i> Xóa
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="row mt-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5>Tổng cộng</h5>
                        <p>Tổng số lượng: <strong>@Model.GetTotalQuantity()</strong></p>
                        <p>Tổng tiền: <strong class="text-danger fs-4">@Model.GetTotalPrice().ToString("N0") ₫</strong></p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="d-grid gap-2">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary">
                        <i class="fas fa-arrow-left"></i> Tiếp tục mua hàng
                    </a>

                    @if (Context.Session.GetString("KhachHang") != null)
                    {
                        <a href="#" class="btn btn-success btn-lg">
                            <i class="fas fa-credit-card"></i> THANH TOÁN
                        </a>
                    }
                    else
                    {
                        <a href="@Url.Action("Login", "Home")" class="btn btn-warning btn-lg">
                            <i class="fas fa-sign-in-alt"></i> Đăng nhập để thanh toán
                        </a>
                    }

                    <form method="post" action="@Url.Action("ClearCart", "Home")" class="d-grid">
                        <button type="submit" class="btn btn-outline-danger">
                            <i class="fas fa-broom"></i> Xóa toàn bộ giỏ hàng
                        </button>
                    </form>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-shopping-cart fa-5x text-muted mb-3"></i>
            <h3 class="text-muted">Giỏ hàng trống</h3>
            <p class="text-muted">Hãy thêm sản phẩm vào giỏ hàng để tiếp tục mua sắm</p>
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                <i class="fas fa-arrow-left"></i> Tiếp tục mua sắm
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Tự động submit form khi thay đổi số lượng
        document.querySelectorAll('.quantity-input').forEach(input => {
            input.addEventListener('change', function() {
                this.form.submit();
            });
        });
    </script>
}