@model IEnumerable<NetCoreMVCLab03.Models.Book>
@using NetCoreMVCLab03.Models

@{
    ViewData["Title"] = "Home Page";
    var bookModel = new Book();
    var popularBooks = bookModel.GetBookList()?.Take(3) ?? Enumerable.Empty<Book>();
}

<div class="text-center">
    <h1 class="display-4">Welcome to BookStore</h1>
    <p>Ứng dụng quản lý sách với ASP.NET Core</p>
</div>

<!-- Featured Books Section -->
@if (popularBooks.Any())
{
    <div class="row mt-5">
        <div class="col-12">
            <h2 class="text-center mb-4">Featured Books</h2>
        </div>
        @foreach (var item in popularBooks)
        {
            <div class="col-md-4 mb-4">
                <div class="card book-card h-100">
                    @if (!string.IsNullOrEmpty(item.Image))
                    {
                        <img src="@item.Image" class="card-img-top book-img" alt="@item.Title">
                    }
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text">
                            <strong>Author:</strong> @bookModel.GetAuthorName(item.AuthorId)<br>
                            <strong>Genre:</strong> @bookModel.GetGenreName(item.GenreId)<br>
                            <strong>Price:</strong> @item.Price.ToString("N0") VNĐ
                        </p>
                    </div>
                    <div class="card-footer bg-transparent">
                        <a href="@Url.Action("Edit", "Book", new { id = item.Id })" class="btn btn-primary btn-sm">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
}

<!-- Nút bấm -->
<div class="text-center mt-4">
    <button id="load-book" class="btn btn-primary">Load More Books</button>
</div>

<!-- Nội dung sẽ được load từ partial view -->
<div id="data-from-ajax" class="row mt-3">
    Nội dung sách sẽ được tải ở đây...
</div>

@section Scripts {
    <script>
        // Bắt sự kiện click vào nút bấm có id = load-book
        $('#load-book').click(function () {
            // Thông qua ajax load nội dung từ partial view vào div có id = data-from-ajax
            $('#data-from-ajax').load('/Book/PopularBook');
        });
    </script>
}