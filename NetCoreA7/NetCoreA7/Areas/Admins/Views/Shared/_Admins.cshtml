<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin cPanel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    @RenderSection("Css", required: false)
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <div class="navbar-nav">
                <!-- Sử dụng asp-area="Admin" để chỉ định khu vực Admin -->
                <a class="nav-item nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                <!-- Có thể thêm các menu khác cho khu vực Admin -->
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <!-- @RenderBody() sẽ hiển thị nội dung của view con thay thế vào đây -->
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>